doctype html
html
    head
        title Case Statement in Pug
    body
        // orderStatus can be Pending, In_Transit, or Completed
        - const orderStatus = 'Pending'

        case orderStatus
            when 'Pending'
                p Your order has been placed and will be sent shortly
            when 'In_Transit'
                p Your order is on the way
            when 'Completed'
                p Your order has been completed
            default
                // this instead
                p Sorry! We aren't sure what happened with your order